@page
@model CarSheets_ServiceAuto.Pages.CarModels.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h3>Index</h3>

<p>
    <a asp-page="Create">Adauga o noua marca</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CarModel[0].carModelName)
            </th>
            <th></th>
        </tr>
    </thead>
