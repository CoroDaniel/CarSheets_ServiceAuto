@page
@model CarSheets_ServiceAuto.Pages.CarModels.CreateModel

@{
    ViewData["Title"] = "Adauga model masini";
}

<h2>Adauga un o noua marca de masini</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CarModel.carModelName" class="control-label"></label>
                <input asp-for="CarModel.carModelName" class="form-control" />
                <span asp-validation-for="CarModel.carModelName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Adauga" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Inapoi la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
